generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User Roles
enum Role {
  ADMIN
  COORDINATOR
  ACCOUNTANT
  VOLUNTEER
  BUSINESS_DEV
  IT_SPECIALIST
  RD_SPECIALIST
  OWNER
}

enum ExpenseStatus {
  PENDING
  SUBMITTED
  APPROVED
  REJECTED
}

enum FormStatus {
  SUBMITTED
  APPROVED
  REJECTED
  PAID
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(VOLUNTEER)
  iban          String?
  bankName      String?
  bankBranch    String?
  accountHolder String?
  currency      String?   @default("TRY")
  phone         String?
  
  // Gamification
  streakCount       Int       @default(0)
  lastSubmissionDate DateTime?

  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)

  accounts     Account[]
  sessions     Session[]
  expenses     Expense[]
  expenseForms ExpenseForm[]
  
  // For auditing who processed a form
  processedForms ExpenseForm[] @relation("ProcessedBy")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Organization {
  id        String    @id @default(cuid())
  name      String
  users     User[]
  projects  Project[]
  policies  Policy[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id             String       @id @default(cuid())
  name           String
  description    String?
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  periods        Period[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Period {
  id        String   @id @default(cuid())
  name      String   // e.g., "January 2024"
  startDate DateTime
  endDate   DateTime
  isActive  Boolean  @default(true)
  
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  expenses  Expense[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Expense {
  id          String   @id @default(cuid())
  description String?
  amount      Decimal  @db.Decimal(10, 2)
  date        DateTime
  category    String?
  merchant    String?
  receiptUrl  String?
  
  // AI Parsing Metadata
  isAiParsed  Boolean  @default(false)
  aiData      Json?    // Store raw AI response or confidence scores
  warnings    String?  // Store AI warnings (e.g. "Bilgi Fi≈üi")
  
  status      ExpenseStatus @default(PENDING)
  rejectionReason String?

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  periodId    String
  period      Period   @relation(fields: [periodId], references: [id], onDelete: Cascade)
  
  expenseFormId String?
  expenseForm   ExpenseForm? @relation(fields: [expenseFormId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ExpenseForm {
  id            String      @id @default(cuid())
  formNumber    Int         @default(autoincrement()) // For readable IDs like #1023
  title         String?
  totalAmount   Decimal     @db.Decimal(10, 2)
  status        FormStatus  @default(SUBMITTED)
  
  submittedAt   DateTime    @default(now())
  processedAt   DateTime?
  
  userId        String
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  processedById String?
  processedBy   User?       @relation("ProcessedBy", fields: [processedById], references: [id], onDelete: SetNull)
  
  expenses      Expense[]
  
  paymentProofUrl String?
  rejectionReason String?

  // Review fields
  location        String?
  receiptsDelivered Boolean @default(false)
  infoVerified    Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Invite {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  role      Role     @default(VOLUNTEER)
  organizationId String
  periodId       String? // Optionally link directly to a period
  expires   DateTime
  used      Boolean  @default(false)

  createdAt DateTime @default(now())
}

model Policy {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  category       String
  maxAmount      Decimal      @db.Decimal(10, 2)
  currency       String       @default("TRY")
  isActive       Boolean      @default(true)
  
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@unique([organizationId, category])
}
